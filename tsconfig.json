{
  "compilerOptions": {
    "baseUrl": ".", //base URL is root folder of the project
    "target": "esnext", //TS compiled to the latest JS version,
    "watch": true, //recompile the file everytime we save the file.
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@ui": ["components/ui"],
      "@ui/*": ["components/ui/*"], //all the subpaths in the ui folder
      "@_types/*": ["types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
